<!DOCTYPE html>
<html>
<head>
    @{
        var template = ViewBag.Model.Blog.Template + ".css";
        var headerimage = "";
        if (ViewBag.Model.Blog.BlogHeaderURL != null)
        {
            headerimage = "style=background-image:url(" + ViewBag.Model.Blog.BlogHeaderURL + ")";
        }
    }
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" type="text/css" href="~/Content/Themes/@template" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
</head>
<body>
    <div class="container-fluid body-content">
        <div class="BlogHeaderContainer">
            <div id="BlogHeaderImage" @headerimage></div>
            <div id="BlogHeaderSiteLogo">
                @Html.ActionLink("Write.IO", "Index", "Home")
            </div>
            <div class="BlogHeader">
                <div class="HeaderLeft">
                    <h1>@Model.Blog.Title</h1>
                </div>
                <div class="HeaderRight">
                    <button type="button" id="CreatePost" class="btn btn-secondary"><i class="fa fa-plus">&nbsp;</i>Create Post</button>
                    <input id="BlogSearch" class="form-control" type="search" placeholder="Type here to search..." aria-label="Search" />
                    <div id="BlogUserIcon">

                    </div>
                </div>
            </div>
        </div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
